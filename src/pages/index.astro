---
import Layout from '../layouts/Layout.astro';

import { getCollection } from 'astro:content';
const challenges = await getCollection("challenges")

interface Challenge {
  slug: string;
  data: {
    title: string;
    description: string
  }
}
---

<Layout title="Web Triumphs by Ignacio Figueroa">
  <h2>Web Triumhps</h2>
{
  challenges.map((challenge: Challenge) => {
						const { slug, data } = challenge;
						return (
							<article class="flex flex-col border-black border-[1px]">
								<a href={`/libro/${slug}`}>
									Link
								</a>
								
								<div class="flex flex-col justify-center">
									<h2 transition:name={`title-${slug}`} class="">
										{data.title}
									</h2>
									<p class="">{data.description}</p>
								</div>
							</article>
						)
					})
 }
</Layout>